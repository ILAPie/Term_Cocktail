<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CocktailDetailActivity">

    <RelativeLayout
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/chart_radar"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/tv_cocktail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="125dp"
            android:text="이   름 : "
            android:textColor="#566270"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="290dp"
            android:text="name"
            android:textColor="#566270"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_cocktail_sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_alignLeft="@+id/tv_cocktail_name"
            android:text="당   도 : "
            android:textColor="#566270"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="290dp"
            android:text="sugar"
            android:textColor="#566270"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_cocktail_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:layout_alignRight="@+id/tv_cocktail_name"
            android:text="도   수 : "
            android:textColor="#566270"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="290dp"
            android:text="alcohol"
            android:textColor="#566270"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_cocktail_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="125dp"
            android:layout_alignLeft="@+id/tv_cocktail_name"
            android:text="바디감 : "
            android:textColor="#566270"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="290dp"
            android:text="body"
            android:textColor="#566270"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_cocktail_unique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="160dp"
            android:layout_alignLeft="@+id/tv_cocktail_name"
            android:text="독특함 : "
            android:textColor="#566270"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_unique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="290dp"
            android:text="unique"
            android:textColor="#566270"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_cocktail_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="195dp"
            android:layout_alignLeft="@+id/tv_cocktail_name"
            android:text="베이스 : "
            android:textColor="#566270"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="195dp"
            android:layout_marginLeft="290dp"
            android:text="base"
            android:textColor="#566270"
            android:textSize="17sp"/>
    </RelativeLayout>

    <ToggleButton
        android:id="@+id/btn_favorite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/ic_favorite_border"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a593e0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/txv_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Resocurces"
            android:textColor="#566270"
            android:textSize="20sp" />


    </android.widget.Toolbar>

    <ImageView
        android:id="@+id/bartender2"
        android:layout_width="189dp"
        android:layout_height="306dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/bartender2" />

    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="215dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/talk" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="105dp"
        android:gravity="center"
        android:text="이걸 드셔보실래요?" />

</RelativeLayout>
